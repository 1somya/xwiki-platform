#template("xwiki.vm")
#template("httpheader.vm")
#template("header.vm")
#macro( versions )
#foreach( $rev in $doc.recentRevisions )
<a href="$viewurl?rev=$rev">$rev</a><span> | </span>
#end
#end
<div id="xwikinav_header">
<div class="xwikiactions">
<a href="$editurl">$msg.get("edit")</a><span> | </span>
<a href="$inlineurl">$msg.get("inline")</a><span> | </span>
<a href="$attachurl">$msg.get("attach")</a><span> | </span>
#versions()
</div>
</div>
#if($message)
<div id="xwikimessage">
$message
</div>
#end
<div id="xwikicontent">
#set( $counter = 0)
<table border="1">
<tr><td>File</td><td>Version</td><td>Author</td><td>Size</td></tr>
#foreach ($attach in $doc.attachmentList)
<tr><td><a href="${downloadurl}/${attach.filename}?id=${counter}">$attach.filename</a></td>
<td>$attach.version</td><td>$attach.author</td><td>$attach.filesize</td></tr>
#set( $counter = $counter + 1)
#end
</table>
<hr />
<form action="$uploadurl" enctype="multipart/form-data" method="post">
<p>
Choose a file to upload:
<input type="file" name="filepath" value="" size="40" />
<input type="submit" value="Attach this file" />
</p>
</form>
</div>
<div id="xwikinav_footer">
<div class="xwikiactions">
<a href="$editurl">$msg.get("edit")</a>
<a href="$inlineurl">$msg.get("inline")</a><span> | </span>
<a href="$attachurl">$msg.get("attach")</a><span> | </span>
#versions()
</div>
</div>
#template("footer.vm")