<form id="objectadd" method="post" action="$doc.getActionUrl("objectadd")">
<h2>Add a Class</h2>
<p>
<select name="classname" size="1">
<option value="---">Select a class</option>
#foreach ($classname in $xwiki.classList)
<option value="$classname">$classname</option>
#end
</select>
<input type="submit" value="Add Class" />
</p>
</form>
or<br />
<h2>Class Description</h2>
<form id="propadd" method="post" action="$doc.getActionUrl("propadd")">
<p>
Name: <input type="text" name="propname" value="" size="20" />
<select name="proptype" size="1">
<option value="---">Select a class</option>
#foreach($prop in $xwiki.metaclass.properties)
<option value="$prop.name">$prop.prettyName</option>
#end
</select>
<input type="submit" value="Add Property" />
</p>
</form>
<form id="propupdate" method="post" action="$doc.getActionUrl("propupdate")">
<table border="0">
#foreach($prop in $doc.xWikiClass.properties)
<tr><th>Property</th><th>$prop.prettyName</th></tr>
#foreach ($classprop in $prop.xWikiClass.propertyNames)
<tr><td>$prop.xWikiClass.safeget("$classprop").getPrettyName()</td>
<td>$doc.displayEdit($prop.xWikiClass.safeget("$classprop"), "${prop.name}_" , $prop)
</td>
</tr>
#end
#end
<tr><td></td><td><input type="submit" value="Modify Class" /></td></tr>
</table>
</form>
