#template("editheader.vm")
<div id="xwikicontent">
<form id="edit" method="post" action="$doc.getActionUrl("preview")">
<p>
<input type="hidden" name="template" value="$!doc.getTemplate()" />
<input type="hidden" name="xredirect" value="$!request.getParameter("xredirect")" />
</p>
#set( $pages = $doc.getIncludedPages() )
#if ( $pages.size() > 0)
<p>
$msg.get("editincludepagemsg")
#foreach ($page in $pages)
#set ( $incldoc = $xwiki.getDocument($doc.web , $page) )
<a href="../../edit/${incldoc.web}/${incldoc.name}">$page</a>&nbsp;
#end
</p>
#end
<div id="xwikitext">
$xwiki.getTextArea($doc.content)
<br/><br/>
Parent:&nbsp;<input type="text" name="parent" value="$doc.getParent()" size="40" />
</div>
</form>
</div>
#template("editfooter.vm")