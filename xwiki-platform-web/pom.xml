<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xpn.xwiki.platform</groupId>
    <artifactId>xwiki</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-web</artifactId>
  <version>1.1-SNAPSHOT</version>
  <name>XWiki Platform - Web - Parent POM</name>
  <packaging>pom</packaging>
  <description>Common web resources for all XWiki WARs</description>
  <scm>
    <connection>scm:svn:svn://svn.forge.objectweb.org/svnroot/xwiki/xwiki-platform/web/trunk</connection>
    <developerConnection>scm:svn:svn+ssh://svn.forge.objectweb.org/svnroot/xwiki/xwiki-platform/web/trunk</developerConnection>
    <url>http://svn.forge.objectweb.org/cgi-bin/viewcvs.cgi/xwiki/xwiki-platform/web/trunk</url>
  </scm>
  <modules>
    <module>standard</module>
    <module>exo</module>
    <!-- Enable again when the GWT module will build fine -->
    <!--module>gwt</module-->
  </modules>
  <!-- Note: Even though this repository is defined in the com.xpn.xwiki.platform:xwiki module we
       still need to define it here because if com.xpn.xwiki.platform:xwiki is not in the local
       repository we want to fetch it from the remote repo to provide a seamless build experience
  -->
  <repositories>
    <repository>
      <id>xwiki</id>
      <name>XWiki Maven2 Remote Repository</name>
      <url>http://maven.xwiki.org</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
</project>
        
