<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xpn.xwiki.platform</groupId>
    <artifactId>xwiki</artifactId>
    <version>27-SNAPSHOT</version>
    <relativePath>../pom</relativePath>
  </parent>
  <artifactId>xwiki-web</artifactId>
  <version>2.1-SNAPSHOT</version>
  <name>XWiki Platform - Web - Parent POM</name>
  <packaging>pom</packaging>
  <description>Common web resources for all XWiki WARs</description>
  <scm>
    <connection>scm:svn:http://svn.xwiki.org/svnroot/xwiki/platform/web/trunk</connection>
    <developerConnection>scm:svn:https://svn.xwiki.org/svnroot/xwiki/platform/web/trunk</developerConnection>
    <url>http://svn.xwiki.org/svnroot/xwiki/platform/web/trunk</url>
  </scm>
  <properties>
    <!-- Used by gwt and wysiwyg modules -->
    <gwt.version>1.6.4</gwt.version>
    <smartgwt.version>1.2</smartgwt.version>
    <junit.version>3.8.2</junit.version>
    <!-- Versions of XWiki dependencies used in Platform/Web modules -->
    <platform.tool.configuration.version>1.32-SNAPSHOT</platform.tool.configuration.version>
    <platform.core.version>2.0-SNAPSHOT</platform.core.version>
    <platform.skin.albatross.version>1.23-SNAPSHOT</platform.skin.albatross.version>
    <platform.skin.toucan.version>1.28-SNAPSHOT</platform.skin.toucan.version>
    <platform.skin.colibri.version>1.2-SNAPSHOT</platform.skin.colibri.version>
  </properties>
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>gwt</module>
        <module>xwiki-gwt-dom</module>
        <module>wysiwyg</module>
        <module>standard</module>
        <module>exo</module>
      </modules>
    </profile>
    <profile>
      <!-- XWiki Enterprise -->
      <id>xe</id>
      <modules>
        <module>gwt</module>
        <module>xwiki-gwt-dom</module>
        <module>wysiwyg</module>
        <module>standard</module>
      </modules>
    </profile>
    <profile>
      <!-- XWiki Enterprise Manager -->
      <id>xem</id>
      <modules>
        <module>gwt</module>
        <module>xwiki-gwt-dom</module>
        <module>wysiwyg</module>
        <module>standard</module>
      </modules>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>smartgwt-maven</id>
      <url>http://www.smartclient.com/maven2</url>
    </repository>
  </repositories>
</project>
