<module rename-to="xwe">
  <inherits name='org.xwiki.gwt.user.User'/>
  <inherits name="com.smartgwt.SmartGwtNoScript"/>

  <stylesheet src="stylesheets/Wysiwyg.css"/>
  <entry-point class="com.xpn.xwiki.wysiwyg.client.Wysiwyg"/>

  <extend-property name="locale" values="fr,de"/>

  <!-- BackColorExecutable -->
  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.color.exec.BackColorExecutable">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.color.exec.BackColorExecutable"/>
  </replace-with>

  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.color.exec.HiliteColorExecutable">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.color.exec.BackColorExecutable"/>
    <any>
      <when-property-is name="user.agent" value="gecko1_8"/>
      <when-property-is name="user.agent" value="gecko"/>
    </any>
  </replace-with>

  <!-- MacroDisplayer -->
  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.macro.MacroDisplayer">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.macro.MacroDisplayer"/>
  </replace-with>

  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.macro.internal.MozillaMacroDisplayer">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.macro.MacroDisplayer"/>
    <any>
      <when-property-is name="user.agent" value="gecko1_8"/>
      <when-property-is name="user.agent" value="gecko"/>
    </any>
  </replace-with>

  <!-- LinePlugin -->
  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.line.LinePlugin">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.line.LinePlugin"/>
  </replace-with>

  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.line.MozillaLinePlugin">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.line.LinePlugin"/>
    <any>
      <when-property-is name="user.agent" value="gecko1_8"/>
      <when-property-is name="user.agent" value="gecko"/>
    </any>
  </replace-with>

  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.line.IELinePlugin">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.line.LinePlugin"/>
    <any>
      <when-property-is name="user.agent" value="ie6"/>
      <when-property-is name="user.agent" value="ie8"/>
    </any>
  </replace-with>

  <!-- SubmitPlugin -->
  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.submit.SubmitPlugin">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.submit.SubmitPlugin"/>
  </replace-with>

  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.submit.IESubmitPlugin">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.submit.SubmitPlugin"/>
    <any>
      <when-property-is name="user.agent" value="ie6"/>
      <when-property-is name="user.agent" value="ie8"/>
    </any>
  </replace-with>

  <!-- List behavior adjuster -->
  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.list.ListBehaviorAdjuster">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.list.ListBehaviorAdjuster"/>
  </replace-with>

  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.list.internal.IEListBehaviorAdjuster">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.list.ListBehaviorAdjuster"/>
    <any>
      <when-property-is name="user.agent" value="ie6"/>
      <when-property-is name="user.agent" value="ie8"/>
    </any>
  </replace-with>

  <replace-with class="com.xpn.xwiki.wysiwyg.client.plugin.list.internal.MozillaListBehaviorAdjuster">
    <when-type-is class="com.xpn.xwiki.wysiwyg.client.plugin.list.ListBehaviorAdjuster"/>
    <any>
      <when-property-is name="user.agent" value="gecko1_8"/>
      <when-property-is name="user.agent" value="gecko"/>
    </any>
  </replace-with>
</module>
