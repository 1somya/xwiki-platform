<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xpn.xwiki.platform</groupId>
    <artifactId>xwiki-web</artifactId>
    <version>1.1-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-web-standard</artifactId>
  <name>XWiki Platform - Web - Standard</name>
  <!-- We're using a pom packaging type instead of a WAR as we're using the Assembly plugin
       in order to generate the WAR as a secondary artifact with a classifier name as this is not
       possible with a primary artifact -->
  <packaging>pom</packaging>
  <description>The standard XWiki WAR</description>
  <dependencies>
    <dependency>
      <groupId>com.xpn.xwiki.platform</groupId>
      <artifactId>xwiki-core</artifactId>
      <version>${version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <!-- Seems there's an issue with version 2.2-beta-1 for the application/ module. It does
             not properly expand a dependency set. Thus we're forcing the usage of 2.1. We have
             to use that version for all other modules too as Maven seems to have an issue when
             using several versions of a plugin in the same build execution. To be removed once
             the assembly plugin is fixed and released. -->
        <version>2.1</version>
        <configuration>
          <descriptors>
            <descriptor>src/assemble/war.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <!-- Run 'mvn org.mortbay.jetty:maven-jetty-plugin:run-war' to generate the WAR and
             execute it in Jetty. Useful for testing
             Note: You'll need a database set up and running. If you use the HSQLDB profile
             the database is looked for in target/database so it's very likely you'll get an
             empty wiki. -->
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>maven-jetty-plugin</artifactId>
        <configuration>
          <contextPath>/xwiki</contextPath>
          <webApp>${project.build.directory}/${project.build.finalName}-${xwiki.db}.war</webApp>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>ci</id>
      <activation>
        <property>
          <name>performRelease</name>
        </property>
      </activation>
      <build>
        <plugins>
          <!-- Use the build numer plugin to add the SVN revision number to XWiki's version.properties
               file so that it's included when displaying XWiki's version.
               Note: This plugin works by making the buildNumber property available. We then filter
               the version.properties file so that the property is replaced by its value. -->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>maven-buildnumber-plugin</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>create</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <doCheck>true</doCheck>
              <doUpdate>true</doUpdate>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <pluginRepositories>
        <!-- We need this repository defined in order to download the buildnumber plugin -->
        <pluginRepository>
          <id>tlc</id>
          <name>TLC Repository</name>
          <url>http://commons.ucalgary.ca/pub/m2</url>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
</project>
