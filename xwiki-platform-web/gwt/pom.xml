<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xpn.xwiki</groupId>
    <artifactId>xwiki-root</artifactId>
    <version>1.1-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-web-gwt</artifactId>
  <name>XWiki Web - GWT API</name>
  <packaging>war</packaging>
  <description>The GWT API XWiki JAR</description>
  <dependencies>
    <!-- These 2 GWT libraries are not yet in the Maven2 central repository. For the time being we
         have uploaded them in our custom Maven repository on http://maven.xwiki.org. -->
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-servlet</artifactId>
      <version>1.3.3</version>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <version>1.3.3</version>
    </dependency>
    <dependency>
      <groupId>com.xpn.xwiki</groupId>
      <artifactId>xwiki-core</artifactId>
      <version>${version}</version>
      <!-- We don't want all the Core libs to be put in WEB-INF/lib as this GWT WAR will be
           overlayed with the Standard WAR which already contains all the required libs -->
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>
