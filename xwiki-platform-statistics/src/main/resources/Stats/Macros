&lt;/thead&gt;
&lt;tbody&gt;
#foreach($item in $stats)
&lt;tr&gt;
&lt;td class="numeric"&gt;$item.pageViews&lt;/td&gt;
&lt;td&gt;&lt;a href="$item.referer" title="$item.URL.host"&gt;$item.URL.host&lt;/td&gt;
&lt;/tr&gt;
#end
