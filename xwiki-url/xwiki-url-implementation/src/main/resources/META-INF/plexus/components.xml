<component-set>
  <components>
    <component>
      <role>org.xwiki.url.XWikiURLFactory</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.url.RegexXWikiURLFactory</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <!-- The configuration below allows customizing the XWiki URL format to any syntax the user
           wants -->
      <configuration>
        <pattern>(?:http[s]?://([a-zA-Z-]*)[a-zA-Z-.]*[:]?\d*)?/\w*/\w*/(\w*)/(\w*)/?(\w*)\??(.*)</pattern>
        <!-- Mapping between regex capture groups and XWiki URL elements -->
        <regexMappings>
          <wiki>1</wiki>
          <action>2</action>
          <space>3</space>
          <page>4</page>
          <queryString>5</queryString>
        </regexMappings>
      </configuration>
    </component>
  </components>
</component-set>
