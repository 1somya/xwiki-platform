#template("xwiki.vm")
<?xml version="1.0" encoding="$xwiki.encoding" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
<title>New chart wizard</title>
<meta http-equiv="Content-Type" content="text/xhtml+xml; charset=$xwiki.encoding" />
$!xwiki.getWebPreference("meta") 
<link href="$xwiki.getSkinFile("chwSkin.css")" rel="stylesheet" type="text/css"/>
#template("stylesheets.vm")
<script type="text/javascript" src="$xwiki.getSkinFile("chwScripts.js")"></script>
</head>
<body onload='window.wizard.initialize("$xwiki.getSkinFile("")");'>
#template("header.vm");
<form id="chwForm" action="$doc.getURL("createchart")" method="post" onsubmit="alert('submit');">
<div id="chartWizard">
  <table id="chwWizard" summary="Chart Wizard Content">
    <tbody>
      <tr>
        <td colspan="2" id="chwNavigation">
#template("chartnavigationimages.vm")
      </td>
    </tr>
    <tr>
      <td id="chwOptions">
        <div id="chwDataWizard" class="chwActivePage">
          <p>Reuse an already defined source of data</p>
          <input type="text" name="source" value="table:Main.WebHome:0"/>
        </div>
        <div id="chwTypeWizard" class="chwInactivePage">
          <div id="chwChartTypeDiv" class="chwHidden">
            <fieldset>
            <label for="chwChartTypeInput" accesskey="t">Chart type:</label>
            <select id="chwChartTypeInput" name="type" onchange="window.wizard.changeChartType(this.value);">
              <option selected="selected" value="Pie">Pie</option>
              <option value="Bar">Bar</option>
            </select>
            <!--select id="chwChartSubtypeInput" name="">
              <optgroup label="Bar subtype">
                <option>A</option>
                <option>F</option>
              </optgroup>
              <optgroup label="subtype">
                <option>C</option>
                <option>D</option>
              </optgroup>
            </select-->
            </fieldset>
          </div>
        </div>
        <div id="chwTitlesWizard" class="chwInactivePage">
          <div id="chwChartTitleDiv" class="chwHidden">
            <label for="chwChartTitleInput" accesskey="c">Chart title:</label>
            <input type="text" id="chwChartTitleInput" name="title"/>
          </div>
          <div id="chwXAxisTitleDiv" class="chwHidden">
            <label for="chwXAxisTitleInput" accesskey="x">X-axis name:</label>
            <input type="text" id="axis_domain_label"/>
          </div>
          <div id="chwYAxisTitleDiv" class="chwHidden">
            <label for="chwYAxisTitleInput" accesskey="y">Y-axis name:</label>
            <input type="text" id="axis_range_label"/>
          </div>
        </div>
        <div id="chwAxesWizard" class="chwInactivePage">
          <div id="chwXAxisDiv" class="chwHidden">
            <input type="checkbox" id="chwXAxisInput"/>
            <label for="chwXAxisInput" accesskey="x">Show X-axis</label>
          </div>
          <div id="chwYAxisDiv" class="chwHidden">
            <input type="checkbox" id="chwYAxisInput"/>
            <label for="chwYAxisInput" accesskey="y">Show Y-axis</label>
          </div>
        </div>
      </td>
      <td id="chwPreview">
        <img id="chwPreviewImg" src="$xwiki.getSkinFile("chwSamplePieChart.png")" alt="Chart Type: Bars" title="Chart Type: Bars"/>
      </td>
    </tr>
    <tr>
      <td id="chwButtons" colspan="2"><a href="#" onclick="history.go(-1); return false;" title="Cancel the chart creation process and return to the previous page" class="chwButton">Cancel</a><a id="chwBackButton" href="#" onclick="window.wizard.showPrevPage(); return false;" title="Go to previous wizard page" class="chwButtonDisabled">Back</a><a id="chwNextButton" href="#" onclick="window.wizard.showNextPage(); return false;" title="Go to next wizard page" accesskey="n" class="chwButton">Next</a><a id="chwFinishButton" href="#" onclick="window.wizard.finish(); return false;" title="Done!" class="chwButtonDisabled">Finish</a></td>
    </tr>
  </tbody>
  </table>
</div>
</form>
</body>
</html>