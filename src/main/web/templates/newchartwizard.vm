<script type="text/javascript" src="$xwiki.getSkinFile("chwScripts.js")"></script>
<div id="chartWizard">
  <table id="chwWizard" summary="Chart Wizard Content">
    <tbody>
      <tr>
        <td colspan="2" id="chwNavigation">
#template("chartnavigationimages.html")
      </td>
    </tr>
    <tr>
      <td id="chwOptions">
        <div id="chwDataWizard" class="chwActivePage">
          <p>Please select the data sources</p>
        </div>
        <div id="chwTypeWizard" class="chwInactivePage">
          <div id="chwChartTypeDiv" class="chwHidden">
            <fieldset>
            <label for="chwChartTypeInput" accesskey="t">Chart type:</label>
            <select id="chwChartTypeInput" name="chwChartTypeInput" onchange="window.wizard.changeChartType(this.value);">
              <option selected="selected" value="Pie">Pie</option>
              <option value="Bar">Bar</option>
            </select>
            <select id="chwChartSubtypeInput" name="chwChartSubtypeInput">
              <optgroup label="Bar subtype" style="display: none">
                <option style="display: none">A</option>
                <option style="display: none">F</option>
              </optgroup>
              <optgroup label="subtype">
                <option>C</option>
                <option>D</option>
              </optgroup>
            </select>
            </fieldset>
          </div>
        </div>
        <div id="chwTitlesWizard" class="chwInactivePage">
          <div id="chwChartTitleDiv" class="chwHidden">
            <label for="chwChartTitleInput" accesskey="c">Chart title:</label>
            <input type="text" id="chwChartTitleInput"/>
          </div>
          <div id="chwXAxisTitleDiv" class="chwHidden">
            <label for="chwXAxisTitleInput" accesskey="x">X-axis name:</label>
            <input type="text" id="chwXAxisTitleInput"/>
          </div>
          <div id="chwYAxisTitleDiv" class="chwHidden">
            <label for="chwYAxisTitleInput" accesskey="y">Y-axis name:</label>
            <input type="text" id="chwYAxisTitleInput"/>
          </div>
        </div>
        <div id="chwAxesWizard" class="chwInactivePage">
          <div id="chwXAxisDiv" class="chwHidden">
            <input type="checkbox" id="chwXAxisInput"/>
            <label for="chwXAxisInput" accesskey="x">Show X-axis</label>
          </div>
          <div id="chwYAxisDiv" class="chwHidden">
            <input type="checkbox" id="chwYAxisInput"/>
            <label for="chwYAxisInput" accesskey="y">Show Y-axis</label>
          </div>
        </div>
      </td>
      <td id="chwPreview">
        <img id="chwPreviewImg" src="$xwiki.getSkinFile("chwSamplePieChart.png")" alt="Chart Type: Bars" title="Chart Type: Bars"/>
      </td>
    </tr>
    <tr>
      <td id="chwButtons" colspan="2"><a href="#" onclick="history.go(-1); return false;" title="Cancel the chart creation process and return to the previous page" class="chwButton">Cancel</a><a id="chwBackButton" href="#" onclick="window.wizard.showPrevPage(); return false;" title="Go to previous wizard page" class="chwButtonDisabled">Back</a><a id="chwNextButton" href="#" onclick="window.wizard.showNextPage(); return false;" title="Go to next wizard page" accesskey="n" class="chwButton">Next</a><a href="#" onclick="return false;" title="Done!" class="chwButtonDisabled">Finish</a></td>
    </tr>
  </tbody>
  </table>
</div>
<script type="text/javascript">
<!--
window.wizard.initialize("$xwiki.getSkinFile("")");
//-->
</script>