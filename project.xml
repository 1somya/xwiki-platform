<?xml version="1.0"?>
<project>
  
  <pomVersion>3</pomVersion>
  <id>xwiki</id>
  <name>XWiki</name>
  <currentVersion>0.1.1-dev</currentVersion>
  <organization>
	  <name>XPertNet, Ludovic Dubost</name>
	  <url>http://www.xpertnet.com</url>
  </organization>
  <inceptionYear>2003</inceptionYear>
  <package>com.xpn.xwiki</package>


  <!-- Gump integration -->
  <gumpRepositoryId>jakarta</gumpRepositoryId>

  <description>
    XWiki Content and Application Framework
  </description>

  <shortDescription>XWiki</shortDescription>

  <url>http://www.xpertnet.biz/twiki/bin/view/XWiki/</url>
  <issueTrackingUrl>http://bugzilla.xpertnet.biz/</issueTrackingUrl>
  <siteAddress>www.xpertnet.biz</siteAddress>
  <siteDirectory>/twiki/bin/view/XWiki/</siteDirectory>
  <distributionDirectory>/twiki/bin/view/XWiki/XWikiDownload</distributionDirectory>

  <repository>
    <connection>scm:cvs:pserver:anonymouns@cvs.xpernet.biz:/intranet/cvsroot:projects/xwiki</connection>
    <url>http://cvsweb.xpertnet.biz/cvsweb/cvsweb.cgi/projects/xwiki</url>
  </repository>

  <mailingLists>
    <mailingList>
      <name>XWiki User List</name>
      <subscribe>xwiki-user-subscribe@mailman.xpertnet.biz</subscribe>
      <unsubscribe>xwiki-user-unsubscribe@mailman.xpertnet.biz</unsubscribe>
      <archive>http://mailman.xpertnet.biz/admin?listName=xwiki-user@mailman.xpertnet.biz</archive>
    </mailingList>
  </mailingLists>

  <developers>
    <developer>
      <name>Ludovic Dubost</name>
      <id>ludovic</id>
      <email>ludovic@xpertnet.biz</email>
      <organization>XPertNet.biz</organization>
    </developer>
  </developers>


  <!-- Need to mark these as compile-time/run-time -->

  <dependencies>    
    <dependency>
      <id>oro</id>
      <version>2.0.6</version>
      <url>http://jakarta.apache.org/oro/</url>
    </dependency>  
  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <integrationUnitTestSourceDirectory/>
    <aspectSourceDirectory/>

    <!-- Unit test classes -->
    <unitTestPatterns>
      <unitTestPattern>include = **/*Test*.java</unitTestPattern>
      <unitTestPattern>exclude = **/DiffTest.java</unitTestPattern>
    </unitTestPatterns>

    <!-- Integration unit test classes -->
    <integrationUnitTestPatterns>
    </integrationUnitTestPatterns>

    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->

    <!-- These are ant pattern sets -->
    <jarResources>
    </jarResources>

    <jars>
    </jars>
  </build>
</project>

