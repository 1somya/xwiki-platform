<component-set>
  <components>
    <component>
      <role>org.xwiki.localization.LocalizationManager</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.localization.internal.DefaultLocalizationManager</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.localization.Bundle</role>
          <field-name>bundles</field-name>
        </requirement>
        <requirement>
          <role>org.xwiki.localization.WikiInformation</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.localization.Bundle</role>
      <role-hint>document</role-hint>
      <implementation>org.xwiki.localization.internal.PulledDocumentsBundle</implementation>
      <requirements>
        <requirement>
          <role>org.xwiki.context.Execution</role>
        </requirement>
        <requirement>
          <role>org.xwiki.localization.WikiInformation</role>
        </requirement>
        <requirement>
          <role>org.xwiki.observation.ObservationManager</role>
        </requirement>
        <requirement>
          <role>org.xwiki.bridge.DocumentAccessBridge</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>100</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.localization.Bundle</role>
      <role-hint>staticDocuments</role-hint>
      <implementation>org.xwiki.localization.internal.StaticDocumentsBundle</implementation>
      <requirements>
        <requirement>
          <role>org.xwiki.localization.WikiInformation</role>
        </requirement>
        <requirement>
          <role>org.xwiki.observation.ObservationManager</role>
        </requirement>
        <requirement>
          <role>org.xwiki.bridge.DocumentAccessBridge</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>300</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.localization.Bundle</role>
      <role-hint>resource</role-hint>
      <implementation>org.xwiki.localization.internal.PulledFilesBundle</implementation>
      <requirements>
        <requirement>
          <role>org.xwiki.context.Execution</role>
        </requirement>
        <requirement>
          <role>org.xwiki.localization.WikiInformation</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>200</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.localization.Bundle</role>
      <role-hint>staticResources</role-hint>
      <implementation>org.xwiki.localization.internal.StaticFilesBundle</implementation>
      <requirements>
        <requirement>
          <role>org.xwiki.localization.WikiInformation</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>400</priority>
        <staticBundles>
          <String>ApplicationResources</String>
          <String>CoreResources</String>
        </staticBundles>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.localization.WikiInformation</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.localization.internal.DefaultWikiInformation</implementation>
      <requirements>
        <requirement>
          <role>org.xwiki.context.Execution</role>
        </requirement>
        <requirement>
          <role>org.xwiki.bridge.DocumentAccessBridge</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.velocity.VelocityContextInitializer</role>
      <role-hint>localization</role-hint>
      <implementation>org.xwiki.localization.internal.LocalizationManagerVelocityContextInitializer</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.localization.LocalizationManager</role>
        </requirement>
      </requirements>
    </component>
  </components>
</component-set>
