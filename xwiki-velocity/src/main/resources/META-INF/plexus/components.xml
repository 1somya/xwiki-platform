<component-set>
  <components>
    <component>
      <role>org.xwiki.velocity.VelocityFactory</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.velocity.DefaultVelocityFactory</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.context.ExecutionContextInitializer</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.velocity.VelocityExecutionContextInitializer</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.velocity.VelocityContextFactory</role>
          <role-hint>default</role-hint>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.velocity.VelocityEngine</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.velocity.DefaultVelocityEngine</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.container.Container</role>
        </requirement>
      </requirements>
      <configuration>
        <properties>
          <property>
            <name>resource.loader</name>
            <value>webapp</value>
          </property>
          <property>
            <name>webapp.resource.loader.class</name>
            <value>org.apache.velocity.tools.view.servlet.WebappLoader</value>
          </property>
          <property>
            <name>velocimacro.messages.on</name>
            <value>false</value>
          </property>
          <!-- Prevents users from writing dangerous Velocity code like using Class.forName or Java threading APIs. -->
          <property>
            <name>runtime.introspector.uberspect</name>
            <value>org.xwiki.velocity.introspection.ChainingUberspector</value>
          </property>
          <property>
            <name>runtime.introspector.uberspect.chainClasses</name>
            <value>org.apache.velocity.util.introspection.SecureUberspector,org.xwiki.velocity.introspection.DeprecatedCheckUberspector</value>
          </property>
          <property>
            <name>resource.manager.logwhenfound</name>
            <value>false</value>
          </property>
          <property>
            <name>velocimacro.permissions.allow.inline.local.scope</name>
            <value>true</value>
          </property>
        </properties>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.velocity.VelocityContextFactory</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.velocity.DefaultVelocityContextFactory</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <properties>
          <property>
            <name>listtool</name>
            <value>org.apache.velocity.tools.generic.ListTool</value>
          </property>
          <property>
            <name>numbertool</name>
            <value>org.apache.velocity.tools.generic.NumberTool</value>
          </property>
          <property>
            <name>datetool</name>
            <value>org.apache.velocity.tools.generic.DateTool</value>
          </property>
          <property>
            <name>mathtool</name>
            <value>org.apache.velocity.tools.generic.MathTool</value>
          </property>
          <property>
            <name>sorttool</name>
            <value>org.apache.velocity.tools.generic.SortTool</value>
          </property>
          <property>
            <name>escapetool</name>
            <value>org.apache.velocity.tools.generic.EscapeTool</value>
          </property>
        </properties>
      </configuration>
    </component>
  </components>
</component-set>
