<component-set>
  <components>

    <!-- Parsers -->
    <component>
      <role>org.xwiki.rendering.parser.LinkParser</role>
      <role-hint>xwiki/2.0</role-hint>
      <implementation>org.xwiki.rendering.parser.XWikiLinkParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>xwiki/2.0</role-hint>
      <implementation>org.xwiki.rendering.parser.WikiModelXWikiParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>mediawiki/1.0</role-hint>
      <implementation>org.xwiki.rendering.parser.WikiModelMediaWikiParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>creole/1.0</role-hint>
      <implementation>org.xwiki.rendering.parser.WikiModelCreoleParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>jspwiki/1.0</role-hint>
      <implementation>org.xwiki.rendering.parser.WikiModelJspWikiParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>xhtml/1.0</role-hint>
      <implementation>org.xwiki.rendering.parser.WikiModelXHTMLParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>confluence/1.0</role-hint>
      <implementation>org.xwiki.rendering.parser.DoxiaConfluenceParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>twiki/1.0</role-hint>
      <implementation>org.xwiki.rendering.parser.DoxiaTWikiParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>

    <!-- Managers -->
    <component>
      <role>org.xwiki.rendering.transformation.Transformation</role>
      <role-hint>macro</role-hint>
      <implementation>org.xwiki.rendering.transformation.MacroTransformation</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.SyntaxFactory</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.parser.DefaultSyntaxFactory</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.MacroFactory</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.macro.DefaultMacroFactory</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.transformation.TransformationManager</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.transformation.DefaultTransformationManager</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>

    <!-- Macros -->
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>xhtml/xwiki</role-hint>
      <implementation>org.xwiki.rendering.macro.XHTMLMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.Parser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
        <requirement>
          <role>org.xml.sax.EntityResolver</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>1000</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>html/xwiki</role-hint>
      <implementation>org.xwiki.rendering.macro.HTMLMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.macro.Macro</role>
          <role-hint>xhtml/xwiki</role-hint>
        </requirement>
        <requirement>
          <role>org.xwiki.xml.html.HTMLCleaner</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>1000</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>velocity/xwiki</role-hint>
      <implementation>org.xwiki.rendering.macro.VelocityMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.velocity.VelocityManager</role>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.parser.Parser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
      </requirements>
      <configuration>
        <priority>1000</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>include/xwiki</role-hint>
      <implementation>org.xwiki.rendering.macro.IncludeMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.context.Execution</role>
        </requirement>
        <requirement>
          <role>org.xwiki.context.ExecutionContextInitializerManager</role>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.DocumentManager</role>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.parser.Parser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.transformation.Transformation</role>
          <role-hint>macro</role-hint>
        </requirement>
      </requirements>
      <configuration>
        <!-- The include macro must execute first since if it runs with the current context it needs to bring
             all the macros from the included page before the other macros are executed. -->
        <priority>10</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>nowiki/xwiki</role-hint>
      <implementation>org.xwiki.rendering.macro.NoWikiMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>toc/xwiki</role-hint>
      <implementation>org.xwiki.rendering.macro.TocMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <priority>2000</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>id/xwiki</role-hint>
      <implementation>org.xwiki.rendering.macro.IdMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <priority>20</priority>
      </configuration>
    </component>
  </components>
</component-set>
