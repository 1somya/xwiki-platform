<component-set>
  <components>

    <!-- Parsers -->
    <component>
      <role>org.xwiki.rendering.parser.LinkParser</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.GenericLinkParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.LinkParser</role>
      <role-hint>xwiki/2.0</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.XWikiLinkParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>xwiki/2.0</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.WikiModelXWikiParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>mediawiki/1.0</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.WikiModelMediaWikiParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>creole/1.0</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.WikiModelCreoleParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>jspwiki/1.0</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.WikiModelJspWikiParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>xhtml/1.0</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.WikiModelXHTMLParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.renderer.PrintRendererFactory</role>        
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>html/4.01</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.WikiModelHTMLParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.renderer.PrintRendererFactory</role>        
        </requirement>
        <requirement>
          <role>org.xwiki.xml.html.HTMLCleaner</role>        
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>confluence/1.0</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.DoxiaConfluenceParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.Parser</role>
      <role-hint>twiki/1.0</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.DoxiaTWikiParser</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.LinkParser</role>
        </requirement>
      </requirements>
    </component>

    <!-- Others -->
    <component>
      <role>org.xwiki.rendering.transformation.Transformation</role>
      <role-hint>macro</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.MacroTransformation</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.macro.MacroFactory</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.parser.SyntaxFactory</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.internal.parser.DefaultSyntaxFactory</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.MacroFactory</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.internal.macro.DefaultMacroFactory</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.SyntaxFactory</role>
        </requirement>
      </requirements>
    </component>
    <component>
      <role>org.xwiki.rendering.transformation.TransformationManager</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.DefaultTransformationManager</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.renderer.PrintRendererFactory</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.internal.renderer.DefaultPrintRendererFactory</implementation>
      <requirements>
        <requirement>
          <role>org.xwiki.bridge.DocumentAccessBridge</role>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.configuration.RenderingConfiguration</role>
        </requirement>
      </requirements>
    </component>

    <!-- Utils -->
    <component>
      <role>org.xwiki.rendering.util.IdGenerator</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.internal.util.DefaultIdGenerator</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.configuration.RenderingConfiguration</role>
      <role-hint>default</role-hint>
      <implementation>org.xwiki.rendering.internal.configuration.DefaultRenderingConfiguration</implementation>
      <requirements>
        <requirement>
          <role>org.xwiki.configuration.ConfigurationManager</role>
          <role-hint>default</role-hint>
        </requirement>
        <requirement>
          <role>org.xwiki.configuration.ConfigurationSourceCollection</role>
          <role-hint>default</role-hint>
        </requirement>
      </requirements>
    </component>

    <!-- Macros -->
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>xhtml</role-hint>
      <implementation>org.xwiki.rendering.internal.macro.xhtml.XHTMLMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.parser.Parser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
        <requirement>
          <role>org.xml.sax.EntityResolver</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>1000</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>html</role-hint>
      <implementation>org.xwiki.rendering.internal.macro.html.HTMLMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.xml.html.HTMLCleaner</role>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.parser.Parser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
        <requirement>
          <role>org.xml.sax.EntityResolver</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>1000</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>velocity</role-hint>
      <implementation>org.xwiki.rendering.internal.macro.velocity.VelocityMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.velocity.VelocityManager</role>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.parser.Parser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
      </requirements>
      <configuration>
        <priority>1000</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>include</role-hint>
      <implementation>org.xwiki.rendering.internal.macro.include.IncludeMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.context.Execution</role>
        </requirement>
        <requirement>
          <role>org.xwiki.context.ExecutionContextInitializerManager</role>
        </requirement>
        <requirement>
          <role>org.xwiki.bridge.DocumentAccessBridge</role>
        </requirement>
        <requirement>
          <role>org.xwiki.rendering.parser.Parser</role>
          <role-hint>xwiki/2.0</role-hint>
        </requirement>
      </requirements>
      <configuration>
        <!-- The include macro must execute first since if it runs with the current context it needs to bring
             all the macros from the included page before the other macros are executed. -->
        <priority>10</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>toc</role-hint>
      <implementation>org.xwiki.rendering.internal.macro.toc.TocMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <requirements>
        <requirement>
          <role>org.xwiki.rendering.util.IdGenerator</role>
        </requirement>
      </requirements>
      <configuration>
        <priority>2000</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>id</role-hint>
      <implementation>org.xwiki.rendering.internal.macro.id.IdMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <priority>20</priority>
      </configuration>
    </component>
  </components>
</component-set>
