beginDocument
beginMacroMarkerStandalone [html] [wiki=true] [
<!-- comment1 -->
<p>hello</p>
<!-- comment2 -->
]
beginXMLNode [ comment1 ]
endXMLNode [ comment1 ]
beginXMLNode [p]
onWord [hello]
endXMLNode [p]
beginXMLNode [ comment2 ]
endXMLNode [ comment2 ]
endMacroMarkerStandalone [html] [wiki=true] [
<!-- comment1 -->
<p>hello</p>
<!-- comment2 -->
]
endDocument
