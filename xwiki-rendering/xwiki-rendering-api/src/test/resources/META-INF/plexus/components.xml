<component-set>
  <components>
    <!-- Components used for testing -->
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>testsimplemacro</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.TestSimpleMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>testsimpleinlinemacro</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.TestSimpleInlineMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>testnestedmacro</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.TestNestedMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>testrecursivemacro</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.TestRecursiveMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>testprioritymacro</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.TestPriorityMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
      <configuration>
        <!-- Ensure that this macro gets executed before the other macros for testing priorities -->
        <priority>500</priority>
      </configuration>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>testfailingmacro</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.TestFailingMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
    <component>
      <role>org.xwiki.rendering.macro.Macro</role>
      <role-hint>testformatmacro</role-hint>
      <implementation>org.xwiki.rendering.internal.transformation.TestFormatMacro</implementation>
      <instantiation-strategy>singleton</instantiation-strategy>
    </component>
  </components>
</component-set>
