.#----------------------------------------------------------------------------------
.input|xwiki/2.0
.# Verify that the XHTML Macro knows how to handle CDATA and that they are not lost.
.# Also verify that characters are not escaped when inside the CDATA section.
.#----------------------------------------------------------------------------------
{{xhtml wiki="false"}}
<script type="text/javascript">
   //<![CDATA[
         if (2 > 1)
             alert("Hello, World")
   // ]]>
</script>
{{/xhtml}}
.#-----------------------------------------------------
.expect|event/1.0
.#-----------------------------------------------------
beginDocument
beginMacroMarker [xhtml] [wiki=false] [
<script type="text/javascript">
   //<![CDATA[
         if (2 > 1)
             alert("Hello, World")
   // ]]>
</script>
]
beginXMLNode [script] [type=text/javascript]
onWord [//]
beginXMLNode [CDATA]
onWord [
         if (2 > 1)
             alert("Hello, World")
   // ]
endXMLNode [CDATA]
endXMLNode [script] [type=text/javascript]
endMacroMarker [xhtml] [wiki=false] [
<script type="text/javascript">
   //<![CDATA[
         if (2 > 1)
             alert("Hello, World")
   // ]]>
</script>
]
endDocument
