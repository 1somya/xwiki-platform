#********************************************************
    List the notifications of the current user as JSON
********************************************************#
#if ("$xcontext.action" == 'get')
  #set ($notifications = [])
  #set ($offset = 0)
  #if ("$!request.offset" != '')
    #set ($offset = $numbertool.toNumber($request.offset).intValue())
  #end
  #foreach ($event in $services.notification.getEvents($offset, 5))
    #set ($discard = $notifications.add({
      'id'          : $event.id,
      'type'        : $event.type,
      'date'        : $event.date,
      'document'    : $services.model.serialize($event.document, 'default'),
      'html'        : $services.rendering.render($services.notification.render($event), 'html/5.0')
    }))
  #end
  #set ($discard = $response.setContentType('application/json'))
  $jsontool.serialize($notifications)
#end
{{/velocity}}
