<script>import com.xpn.xwiki.web.*
import org.xwiki.rendering.transformation.*
import org.xwiki.rendering.block.*
import org.xwiki.rendering.syntax.*

if (context.getEngineContext().getAttribute("ircbot") == null) {
    context.put("botAction", "start")
    def xdom = new XDOM([new MacroBlock("include", [document:"IRC.IRCBot", context:"new"], false)])
    def txManager = Utils.getComponent(TransformationManager.class)
    txManager.performTransformations(xdom, new TransformationContext(xdom, Syntax.XWIKI_2_0))
}</script>
