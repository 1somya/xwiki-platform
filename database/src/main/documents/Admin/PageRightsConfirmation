<content>#set($page = $request.page)
#set($placemgr = $xwiki.parseGroovyFromPage("XWiki.RightsGroovy"))
$placemgr.setContext($context)
$placemgr.setXWiki($xwiki)
$placemgr.setRequest($request)
#if($placemgr.updatePageRights($page))
#xwikimessageboxstart("Rights Manager" "")
The page rights have been updated properly. You can make additional modifications.
#xwikimessageboxend()

#includeTopic("PageRights")
#else
#xwikimessageboxstart("Rights Manager" "")
An error occured while updating rights:

$!placemgr.message
#xwikimessageboxend()
